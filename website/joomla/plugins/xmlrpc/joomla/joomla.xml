<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="xmlrpc" method="upgrade">
	<name>plg_xmlrpc_joomla</name>
	<creationDate>May 2013</creationDate>
	<author>Yoshiki Kozaki</author>
	<authorEmail>info@joomler.net</authorEmail>
	<authorUrl>http://www.joomler.net</authorUrl>
	<copyright>(C) 2007 - 2013 Yoshiki Kozaki All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>2.0.6</version>
	<description>PLGXMLRPC_JOOMLA_DESC</description>
	<files>
		<filename plugin="joomla">joomla.php</filename>
		<filename plugin="joomla">index.html</filename>
		<folder>xml</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_xmlrpc_joomla.ini</language>
		<language tag="en-GB">en-GB.plg_xmlrpc_joomla.sys.ini</language>
		<language tag="ja-JP">ja-JP.plg_xmlrpc_joomla.ini</language>
		<language tag="ja-JP">ja-JP.plg_xmlrpc_joomla.sys.ini</language>
		<language tag="ja-JU">ja-JU.plg_xmlrpc_joomla.ini</language>
		<language tag="ja-JU">ja-JU.plg_xmlrpc_joomla.sys.ini</language>
	</languages>
	<config>
	<fields name ="params" >
		<fieldset name="basic" label="PLG_XMLRPC_JOOMLA_BASIC_OPTION"
				  description="PLG_XMLRPC_JOOMLA_BASIC_OPTION_DESC">
			<field name="userfolder" type="radio" default="0"
				label="PLG_XMLRPC_JOOMLA_USER_FOLDER"
				description="PLG_XMLRPC_JOOMLA_USER_FOLDER_DESC" >
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>
			<field name="overwrite" type="radio" default="0"
				label="PLG_XMLRPC_JOOMLA_OVERWRITE"
				description="PLG_XMLRPC_JOOMLA_OVERWRITE_DESC" >
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>

			<field name="featured" type="radio" default="0" label="PLG_XMLRPC_JOOMLA_FEATURED" description="PLG_XMLRRPC_JOOMLA_FEATURED_DESC">
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>

			<field name="language" type="contentlanguage" default="*" label="PLG_XMLRPC_JOOMLA_LANGUAGE" description="PLG_XMLRPC_JOOMLA_LANGUAGE_DESC">
				<option value="*">JALL</option>
			</field>
		</fieldset>
		<fieldset name="advanced" label="PLG_XMLRPC_JOOMLA_ADVANCED_OPTION"
				  description="PLG_XMLRPC_JOOMLA_ADVANCED_OPTION_DESC">
			<field name="absolute_link" type="radio" default="0"
			label="PLG_XMLRPC_JOOMLA_ABSOLUTELINK"
			description="PLG_XMLRPC_JOOMLA_ABSOLUTELINK_DESC">
				<option value="0">PLG_XMLRPC_JOOMLA_RELATIVE</option>
				<option value="1">PLG_XMLRPC_JOOMLA_ABSOLUTE</option>
			</field>

			<field name="beforewrapid" type="text" size="5"
				label="PLG_XMLRPC_JOOMLA_BEFOREWRAP_TEXT"
				description="PLG_XMLRPC_JOOMLA_BEFOREWRAP_TEXT_DESC" />
			<field name="afterwrapid" type="text" size="5"
				label="PLG_XMLRPC_JOOMLA_AFTERWRAP_TEXT"
				description="PLG_XMLRPC_JOOMLA_AFTERWRAP_TEXT_DESC" />

			<field name="readmore" type="radio" default="0" label="PLG_XMLRPC_JOOMLA_GOOGLE_DOC_READMORE" description="PLG_XMLRPC_JOOMLA_GOOGLE_DOC_READMORE_DESC">
				<option value="0">PLG_XMLRPC_JOOMLA_GOOGLE_DOC_READMORE_FIRST_HORIZONTAL</option>
				<option value="1">PLG_XMLRPC_JOOMLA_GOOGLE_DOC_READMORE_FIRST_PAGEBREAK</option>
			</field>
			<field name="pagebreak" type="radio" default="1" label="PLG_XMLRPC_JOOMLA_GOOGLE_DOC_PAGEBREAK" description="ENABLEDISABLE_GOOGLE_DOC_PAGEBREAK">
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>
		</fieldset>
	</fields>
	</config>
</extension>